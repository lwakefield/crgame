    LOC_VERTEX_TEXCOORD01
    LOC_VERTEX_TEXCOORD02
    LOC_VERTEX_NORMAL
    LOC_VERTEX_TANGENT
    LOC_VERTEX_COLOR
    LOC_MATRIX_MVP
    LOC_MATRIX_MODEL
    LOC_MATRIX_VIEW
    LOC_MATRIX_PROJECTION
    LOC_VECTOR_VIEW
    LOC_COLOR_DIFFUSE
    LOC_COLOR_SPECULAR
    LOC_COLOR_AMBIENT
    LOC_MAP_ALBEDO
    LOC_MAP_DIFFUSE       = LOC_MAP_ALBEDO
    LOC_MAP_METALNESS
    LOC_MAP_SPECULAR      = LOC_MAP_METALNESS
    LOC_MAP_NORMAL
    LOC_MAP_ROUGHNESS
