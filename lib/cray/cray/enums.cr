    HMD_VALVE_HTC_VIVE
    HMD_SONY_PSVR
  end

  enum RRESDataType
    RRES_TYPE_RAW
    RRES_TYPE_IMAGE
    RRES_TYPE_WAVE
    RRES_TYPE_VERTEX
    RRES_TYPE_TEXT
    RRES_TYPE_FONT_IMAGE
    RRES_TYPE_FONT_CHARDATA # CharInfo data array
    RRES_TYPE_DIRECTORY
  end
